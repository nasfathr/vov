<div class="login-buttons">
	<button class="fb-signup signup-btn bc-btn-facebook" data-usertype="{{ role }}">
		Sign up with Facebook
	</button>
	<button class="google-signup signup-btn bc-btn-google" data-usertype="{{ role }}">
		Sign up with Google
	</button>
</div>
<div class="login-inputs">
	{{> input text="Full Name" id="name" name="name" }}
	{{> input text="Email" id="email" name="email" }}
	{{> input text="Username" id="username" name="username" }}
	{{> input text="Password" id="pass" name="pass" }}
	{{> input text="Verify Password" id="pass2" name="pass2" }}
</div>
<div class="login-buttons">
	<button class="local-signup  signup-btn bc-btn-primary" data-usertype="{{ role }}">
		Submit
	</button>
</div>